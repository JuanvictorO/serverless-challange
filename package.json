{
  "name": "serverless-challange",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JuanvictorO/serverless-challange.git",
  "author": "Juan Victor <juanvictor.silva@a4pm.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --poll --respawn src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier",
    "test": "jest --config jest.config.ts"
  },
  "dependencies": {
    "@sentry/node": "^7.3.1",
    "aws-sdk": "^2.1164.0",
    "axios": "^0.27.2",
    "celebrate": "^15.0.1",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-basic-auth": "^1.2.1",
    "mysql": "^2.18.1",
    "rate-limiter-flexible": "^2.3.7",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.4.0",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.2.41",
    "typeorm-transactional-cls-hooked": "^0.1.21",
    "uuid": "^8.3.2",
    "yar": "^0.3.6"
  },
  "devDependencies": {
    "@babel/node": "^7.18.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/redis": "^2.8.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.2",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
